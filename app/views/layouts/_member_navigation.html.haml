.container
  .fixed.contain-to-grid
    %nav.top-bar
      %ul
        %li.name{:class => (active == "home")? "name active" : ""}
          %h1
            %a{:href => root_path}
              = t(:title)
        %li.toggle-topbar
          %a{:href => "#"}
      %section
        %ul.left
          -if !current_company.nil?
            %li
              %a{:href => "#"}
                = current_company.name
        %ul.right
          %li.divider
          %li{:class => (active == "customers")? "name active" : ""}
            = link_to "Customers", customers_path
          %li.divider
          %li{:class => (active == "products")? "name active" : ""}
            = link_to "Products", products_path
          %li.divider
          %li{:class => (active == "inventory")? "name active" : ""}
            = link_to "Inventory", involved_items_path
          %li.divider
          %li
            = link_to "Log-out",destroy_user_session_path, :method => :delete
          %li.divider